{
  "name": "@yikoyu/eslint-config-prettier",
  "version": "1.0.0",
  "license": "MIT",
  "description": "ESLint config with prettier integration",
  "private": false,
  "author": "yikoyu<2282373181@qq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yikoyu/eslint-config-prettier"
  },
  "keywords": [
    "eslint",
    "config",
    "eslintconfig",
    "eslint-config",
    "prettier",
    "lint",
    "typescript",
    "vue"
  ],
  "main": "/lib/base.js",
  "exports": {
    ".": "./lib/base.js",
    "./base": "./lib/base.js",
    "./typescript": "./lib/typescript.js",
    "./vue2": "./lib/vue2.js",
    "./vue3": "./lib/vue3.js",
    "./prettier.config": "./prettier.config.js"
  },
  "files": [
    "lib",
    "prettier.config.js",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint **/*.{js,ts}",
    "lint:fix": "eslint **/*.{js,ts} --fix",
    "git-commit": "git-cz",
    "push": "pnpm publish --no-git-checks --registry https://registry.npmjs.org/ --access public",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "peerDependencies": {
    "eslint": "^6.0.0 || ^7.0.0 || ^8.0.0",
    "prettier": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint-config-prettier": "^8.8.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.14.1",
    "vue-eslint-parser": "^9.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cz-commitlint": "^17.5.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  }
}
