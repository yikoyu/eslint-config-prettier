{
  "name": "@yikoyu/eslint-config-prettier",
  "version": "1.2.0",
  "license": "MIT",
  "description": "ESLint config with prettier integration",
  "private": false,
  "author": "yikoyu<2282373181@qq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yikoyu/eslint-config-prettier"
  },
  "keywords": [
    "eslint",
    "config",
    "eslintconfig",
    "eslint-config",
    "prettier",
    "stylelint",
    "lint",
    "typescript",
    "vue"
  ],
  "main": "/lib/base.js",
  "exports": {
    ".": "./lib/base.js",
    "./base": "./lib/base.js",
    "./typescript": "./lib/typescript.js",
    "./vue2": "./lib/vue2.js",
    "./vue3": "./lib/vue3.js",
    "./nuxt3-ts": "./lib/nuxt3-ts.js",
    "./prettier.config": "./prettier.config.js",
    "./stylelint.config": "./stylelint.config.js"
  },
  "files": [
    "lib",
    "prettier.config.js",
    "stylelint.config.js",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint **/*.{js,ts}",
    "lint:fix": "eslint **/*.{js,ts} --fix",
    "git-commit": "git-cz",
    "push": "pnpm publish --no-git-checks --registry https://registry.npmjs.org/ --access public",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@rushstack/eslint-patch": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.14.1",
    "postcss": "^8.4.24",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.3",
    "stylelint": "^15.7.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-prettier": "^3.0.0",
    "vue-eslint-parser": "^9.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cz-commitlint": "^17.5.0",
    "commitizen": "^4.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  }
}
